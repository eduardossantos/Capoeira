<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nova_roda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.suic.vadiando.NovaRodaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="376dp">

        <EditText
            android:id="@+id/nova_roda_foto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="16dp"/>
        <EditText
            android:id="@+id/nova_roda_descricao"
            android:layout_marginLeft="49dp"
            android:layout_marginRight="16dp"
            android:layout_width="150dp"
            android:layout_height="150dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/nova_roda_local"
                android:hint="Local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/nova_roda_uf"
                android:hint="UF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/nova_roda_responsavel"
                android:hint="Responsavel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:inputType="time"
                android:id="@+id/nova_roda_data_Hora_inicio"
                android:hint="Data do Evento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/nova_roda_observacoes"
                android:hint="Observações"
                android:layout_width="match_parent"
                android:layout_height="145dp"/>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>

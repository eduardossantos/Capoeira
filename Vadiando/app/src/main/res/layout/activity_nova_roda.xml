<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nova_roda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.suic.vadiando.NovaRodaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="376dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="16dp"/>
        <EditText
            android:layout_marginLeft="49dp"
            android:layout_marginRight="16dp"
            android:layout_width="150dp"
            android:layout_height="150dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="95dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/novaRodaLocal"
                android:hint="Local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/novaRodaResponsavel"
                android:hint="Responsavel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:inputType="time"
                android:id="@+id/novaRodaDataInicio"
                android:hint="Data e Hora de Início"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                m
                android:id="@+id/novaRodaDataFim"
                android:hint="Data e Hora de Término"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/repitaSenha"
                android:hint="Observações"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>



        </LinearLayout>



    </LinearLayout>
    <Button
        android:id="@+id/novoAquiEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar Evento"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>

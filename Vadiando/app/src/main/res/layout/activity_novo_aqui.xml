<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_novo_aqui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.suic.vadiando.NovoAquiActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="16dp"/>
            <EditText
                android:layout_marginLeft="49dp"
                android:layout_marginRight="16dp"
                android:layout_width="150dp"
                android:layout_height="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/novo_aqui_apelido"
                android:hint="Apelido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                />
            <EditText
                android:inputType="time"
                android:id="@+id/novo_aqui_data_nascimento"
                android:hint="Nascimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/novo_aqui_uf"
                android:hint="UF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/novo_aqui_email"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/novo_aqui_repita_email"
                android:inputType="textEmailAddress"
                android:hint="Repita o email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <EditText
                android:inputType="textWebPassword"
                android:id="@+id/novo_aqui_senha"
                android:hint="Senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/novo_aqui_repita_senha"
                android:inputType="textWebPassword"
                android:hint="Repita a senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
